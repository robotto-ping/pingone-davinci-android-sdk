<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaVinciSDKTestApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DaVinciSDKTestApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DaVinciSDKTestApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DaVinciSDKTestApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="Theme.DaVinciSDKTestApp.Button"  parent="Widget.AppCompat.Button.Colored">

        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">#f45678</item>
        <item name="android:textSize">17dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Theme.DaVinciSDKTestApp.EditText"  parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#345543</item>
        <item name="android:textSize">30dp</item>

        <item name="android:background">#45454500</item>
        <item name="android:layout_marginBottom">10dp</item>


    </style>
    <style name="Theme.DaVinciSDKTestApp.HeaderText"  parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30dp</item>
        <item name="android:height">90dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="Theme.DaVinciSDKTestApp.Text"  parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#6543fe</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>

    <style name="Theme.DaVinciSDKTestApp.ButtonContainer" >


        <item name="android:layout_margin">65dp</item>
        <item name="android:background">#5500df</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/button_spacer</item>

    </style>

    <style name="Theme.DaVinciSDKTestApp.TitleContainer" >

        <item name="android:layout_margin">65dp</item>
        <item name="android:background">#623456</item>
        <item name="android:padding">5dp</item>

        <item name="android:gravity">center</item>

    </style>

    <style name="Theme.DaVinciSDKTestApp.FieldContainer" >

        <item name="android:background">#8dddf6</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">35dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>


    </style>
</resources>