<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaVinciSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DaVinciSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DaVinciSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DaVinciSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DaVinci.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">#551111</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DaVinci.EditView" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#ff3333</item>
    </style>
    <style name="MyButton"  parent="Widget.AppCompat.Button.Colored">
        <item name="colorSecondary">#950000</item>
        <item name="android:colorButtonNormal">#950000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Theme.DaVinciSDKTestApp.EditText"  parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17dp</item>
        <item name="android:height">30dp</item>
        <item name="android:background">#dddddd</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="Theme.DaVinciSDKTestApp.HeaderText"  parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20dp</item>
        <item name="android:height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="Theme.DaVinciSDKTestApp.Text"  parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17dp</item>
        <item name="android:height">30dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>
</resources>